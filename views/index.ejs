<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center">Weather App</h1>
        
        <!-- Form to add a new city -->
        <form action="/addCity" method="POST" class="mb-4">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Enter City" name="city" required>
                <button class="btn btn-primary" type="submit">Add City</button>
            </div>
        </form>

        <!-- Display weather cards for each city -->
        <div class="row">
            <% if (weatherData.length > 0) { %>
                <% weatherData.forEach(function(weather) { %>
                    <% if (weather.temperature > 30) {%>
                        <script>
                            alert('Temperature has exceeded the set threshold');
                        </script>
                    <% } %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title"><%= weather.city %></h5>
                                <h6 class="card-subtitle mb-2 text-muted">Weather: <%= weather.weatherCondition %></h6>
                                <p class="card-text">
                                    <strong>Temperature:</strong> <%= weather.temperature %> Â°C<br>
                                </p>
                                <form action="/showGraph" method="POST">
                                  <input type="hidden" name="city" value="<%= weather.city %>">
                                  <button type="submit" class="btn btn-info">Show Graph</button>
                              </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No cities added yet. Please add a city.</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
